#!/usr/bin/make -f

common-binary-post-install-arch::
	install -d -m 755  debian/gm/etc/X11/Xsession.d
	install -m 755 debian/Xsession debian/gm/etc/X11/Xsession.d/99gm
	mkdir -p debian/gm/usr/share/keys/help
	install -m 644 gm_help.ini debian/gm/usr/share/keys/help/gm.ini
	cp -a help debian/gm/usr/share

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/autotools.mk
DEB_CONFIGURE_EXTRA_FLAGS := --disable-rpath
DEB_CONFIGURE_SCRIPT := $(CURDIR)/$(DEB_SRCDIR)/autogen.sh
