                 state, "default" 0.0;
                 rel1 { relative, 1.0 1.0; offset, -56 -39; }
                 rel2 { relative, 1.0 1.0; offset, -24 -7; }
                 image { normal, "icon-none.png"; }
             }
             description {
                 state, "icon-book" 0.0;
                 inherit, "default" 0.0;
                 image { normal, "icon-book.png"; }
