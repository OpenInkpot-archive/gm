            name, "title";
            type, TEXT;
            mouse_events, 0;
            clip_to, "clipper";
            description {
               state, "default" 0.0;
               color, 0 0 0 255;
               text {
                  align, 0.0 0.5;
                  text, "";
                  font, "serif";
                  size, "28";
                  text_class, "chrome";
               }
               rel1 { relative, 0.0 0.0; offset, 17 0; }
               rel2 { relative, 1.0 1.0; offset, -18 -1; }
            }
         }
         part {
            name, "author";
            type, TEXT;
